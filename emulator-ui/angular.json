{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "emulator-ui": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss",
          "standalone": true
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-architects/native-federation:build",
          "options": {
            "target": "emulator-ui:esbuild"
          },
          "configurations": {
            "production": {
              "target": "emulator-ui:esbuild:production"
            },
            "development": {
              "target": "emulator-ui:esbuild:development"
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-architects/native-federation:build",
          "options": {
            "target": "emulator-ui:serve-original",
            "rebuildDelay": 0,
            "dev": true,
            "port": 4205
          },
          "configurations": {
            "production": {
              "target": "emulator-ui:serve-original:production"
            },
            "development": {
              "target": "emulator-ui:serve-original:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "esbuild": {
          "builder": "@angular/build:application",
          "options": {
            "outputPath": "dist/emulator-ui",
            "index": "src/index.html",
            "browser": "src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              { "glob": "**/*", "input": "public" }
            ],
            "styles": ["src/styles.scss"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                { "type": "initial", "maximumWarning": "500kB", "maximumError": "2MB" },
                { "type": "anyComponentStyle", "maximumWarning": "4kB", "maximumError": "8kB" }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve-original": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": { "buildTarget": "emulator-ui:esbuild:production" },
            "development": { "buildTarget": "emulator-ui:esbuild:development" }
          },
          "defaultConfiguration": "development"
        }
      }
    }
  }
}
